@model List<About>
@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımızda</h2>

<table class="table table-hover">
    <tr>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Doğum Tarihi</th>
        <th>Telefon</th>
        <th>Şehir</th>
        <th>Yaş</th>
        <th>Email</th>
        <th>İkinci Alt Başlık</th>
        <th>Image Url</th>
        <th>Güncelle</th>

    </tr>
    
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Birtday</td>
            <td>@item.Phone</td>
            <td>@item.City</td>
            <td>@item.Age</td>
            <td>@item.Email</td>
            <td>@item.SecondDescription</td>
            <td>@item.ImageUrl</td>
            <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>