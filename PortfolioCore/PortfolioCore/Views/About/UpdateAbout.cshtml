@model About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımızda Güncelle Sayfa</h2>

<form method="post">
    <input type="hidden" asp-for="AboutId" />
    <label>Başlık</label>
    <input type="text" class="form-control" asp-for="Title" style="border: 1px solid gray" />
    <br />
    <label>Açıklama</label>
    <input type="text" class="form-control" asp-for="Description" style="border: 1px solid gray" />
    <br />
    <label>Doğum Tarihi </label>
    <input type="text" class="form-control" asp-for="Birtday" style="border: 1px solid gray" />
    <br />
    <label>Telefon </label>
    <input type="text" class="form-control" asp-for="Phone" style="border: 1px solid gray" />
    <br />
    <label>Şehir</label>
    <input type="text" class="form-control" asp-for="City" style="border: 1px solid gray" />
    <br />
    <label>Yaş </label>
    <input type="text" class="form-control" asp-for="Age" style="border: 1px solid gray" />
    <br />
    <label>Email </label>
    <input type="text" class="form-control" asp-for="Email" style="border: 1px solid gray" />
    <br />
    <label>İkinci Alt Başlık </label>
    <input type="text" class="form-control" asp-for="SecondDescription" style="border: 1px solid gray" />
    <br />
    <label>Image Url </label>
    <input type="text" class="form-control" asp-for="ImageUrl" style="border: 1px solid gray" />
    <br />
    <button class="btn btn-success" >Kaydet</button>
</form>