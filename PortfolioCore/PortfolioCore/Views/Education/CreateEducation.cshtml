@model Education
@{
    ViewData["Title"] = "CreateEducation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Eğitim Ekleme Sayfası</h2>

<form method="post">
   
    <label>Başlık</label>
    <input type="text" asp-for="Title" style="border:1px solid gray;" class="form-control" />
    <br />
    <label>Tarih</label>
    <input type="text" asp-for="DateInfo" style="border:1px solid gray;" class="form-control" />
    <br />
    <label>Alt Başlık</label>
    <input type="text" asp-for="SubTitle" style="border:1px solid gray;" class="form-control" />
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" style="border:1px solid gray;" class="form-control" />
    <br />
    <button  class="btn btn-primary" >Kaydet</button>
</form>