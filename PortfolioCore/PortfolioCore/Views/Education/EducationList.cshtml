@model List<Education>
@{
    ViewData["Title"] = "EducationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Eğitim Hayatım</h2>

<table class="table  table-hover">

    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Tarih</th>
        <th>Alt Başlık</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)

    {
        <tr>
            <td>@item.EducationId</td>
            <td>@item.Title</td>
            <td>@item.DateInfo</td>
            <td>@item.SubTitle</td>
            <td>@item.Description</td>
            <td><a href="/Education/DeleteEducation/@item.EducationId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Education/UpdateEducation/@item.EducationId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Education/CreateEducation" type="submit" class="btn btn-primary">Yeni Eğitim Ekle</a>