@model List<About>
<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Hakkımda</h2>
        <p></p>
    </div><!-- End Section Title -->

    <div class="container m-auto" data-aos="fade-up" data-aos-delay="100">
        @foreach(var item in Model)
        {
        
            <div class="row gy-4 justify-content-center ">
                <div class="col-lg-4">
                    <img src="@item.ImageUrl" class="img-fluid" alt="">
                </div>
                <div class="col-lg-8 content">
                    <h2>@item.Title</h2>
                    <p class="fst-italic py-3">
                        @item.Description
                    </p>
                    <div class="row">
                        <div class="col-lg-12">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Doğum Tarihi:</strong> <span>@item.Birtday</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>@item.Phone</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@item.Email</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span>@item.City</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong> <span>@item.Age</span></li>
                            </ul>
                        </div>
                    </div>
                    <p class="py-3">
                       @item.SecondDescription
                    </p>
                </div>
            </div>


        }

    </div>

</section><!-- /About Section -->
