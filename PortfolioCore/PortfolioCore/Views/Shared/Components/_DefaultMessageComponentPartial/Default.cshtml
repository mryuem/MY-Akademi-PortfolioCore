@model Message

@if (ViewBag.msgAlert !=null)
{
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

	<script>
		Swal.fire({
			title: "Başarılı!",
			text: "Mesaj başarılı bir şekilde gönderildi",
			icon: "success"
		});
	</script>

}


<div class="col-lg-8">
	<form action="/SendMessage/SendMessage" method="post" data-aos="fade-up" data-aos-delay="200">
		<div class="row gy-4">

			<div class="col-md-6">
				<input type="text" class="form-control" asp-for="NameSurname" placeholder="Adınız" required="">
			</div>

			<div class="col-md-6 ">
				<input type="email" class="form-control" asp-for="Email" placeholder="Email Adresiniz" required="">
			</div>

			<div class="col-md-12">
				<input type="text" class="form-control" asp-for="Sunject" placeholder="Başlık" required="">
			</div>

			<div class="col-md-12">
				<textarea class="form-control" rows="6" asp-for="MessageDetail" placeholder="Mesaj" required=""></textarea>
			</div>

			<div class="col-md-12 text-center">
				<button  type="submit" class="btn btn-primary ">Gönder</button>
			</div>

		</div>
	</form>
</div><!-- End Contact Form -->

