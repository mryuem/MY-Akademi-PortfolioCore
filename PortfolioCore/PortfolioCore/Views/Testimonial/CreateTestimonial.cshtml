@model Testimonial
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans Ekleme Sayfası</h2>

<form method="post">

    <label>Başlık</label>
    <input type="text" asp-for="NameSurname" style="border:1px solid gray;" class="form-control" />
    <br />
    <label>Tarih</label>
    <input type="text" asp-for="Title" style="border:1px solid gray;" class="form-control" />
    <br />
    <label>Alt Başlık</label>
    <input type="text" asp-for="CommentDetail" style="border:1px solid gray;" class="form-control" />
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="ImageUrl" style="border:1px solid gray;" class="form-control" />
    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>